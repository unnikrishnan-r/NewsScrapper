<div class=container>
  <div class="table-responsive-sm">

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col" id="news-no">Sl No</th>
          {{!-- <th scope="col" id="news-date">Posted Date</th> --}}
          <th scope="col" id="news-title">Title</th>
          <th scope="col" id="news-image">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each newsItem}}
        <tr>
          <td>{{inc @index}} </td>
          <td><a href="{{link}}">{{title}}</a></td>

          <td><img class="img-fluid" src="{{image}}">
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</div>
